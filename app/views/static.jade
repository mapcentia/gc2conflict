html
    head
        head
            title #{json.text}
            link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css')
        body
            div(class="container-fluid")
                div(class="row")
                    div(class="col-xs-12")
                        a(href="pdf?id=" + json.id) Hent som PDF
                        h2 #{json.text}
                        p #{json.dateTime}
                        img(src= "/tmp/" + json.id + ".png")
                        h3 Hits
                        table(class="table")
                            each val, key in json.hits
                                tr
                                    td
                                        p #{json.metaDataKeys[val.table.split(".")[1]].f_table_title || json.metaDataKeys[val.table.split(".")[1]].f_table_name} (#{val.hits})
                                            if val.data.length > 0
                                                table(class="table table-bordered")
                                                    thead
                                                        each data, dkey in val.data[0]
                                                            if data.key == false
                                                                th #{data.alias}
                                                        each data, dkey in val.data
                                                            tr
                                                                each row, rkey in data
                                                                    if row.key == false
                                                                         td #{row.value}
                        h3 Ingen hits
                        table(class="table")
                            each val, key in json.noHits
                                tr
                                    td #{json.metaDataKeys[val.table.split(".")[1]].f_table_title || json.metaDataKeys[val.table.split(".")[1]].f_table_name}